    }

    form {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    input, button {
      width: calc(33% - 12px);
      padding: 12px;
      margin: 8px 6px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 16px;
    }

    button {
      background-color: #2ecc71;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #27ae60;
    }

    .delete-btn {
      background-color: #e74c3c;
      color: white;
      border: none;
      padding: 12px;
      margin-top: 12px;
